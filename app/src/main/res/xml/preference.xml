<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="About">

    <Preference
        android:icon="@drawable/ic_changelog"
        android:key="pref_changelog"
        android:summary="Check out the latest changes. "
        android:title="Changelog" />


    <EditTextPreference
        android:key="username"
        android:summary="Please provide your username"
        android:title="Your Name" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="applicationUpdates"
        android:summary="This option if selected will allow the application to check for latest versions."
        android:title="Application Updates" />
    <ListPreference
        android:defaultValue="1"
        android:entries="@array/listArray"
        android:entryValues="@array/listValues"
        android:key="downloadType"
        android:summary="Select the kind of data that you would like to download"
        android:title="Download Details" />

    </PreferenceCategory>
    
</PreferenceScreen>