<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/rippleOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="@color/md_white_1000"
        app:mrl_rippleDuration="450"
        app:mrl_rippleFadeDuration="475"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">

        <ImageView
            android:id="@+id/placeImage"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:scaleType="centerCrop" />

    </com.balysv.materialripple.MaterialRippleLayout>


    <LinearLayout
        android:id="@+id/schadowBelow"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shadow_gradient"
        android:orientation="horizontal"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/colorizedFrame"
        style="@style/LinearLayoutForTexts"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/locationText"
            style="@style/TextViewHeadline"
            android:text="Location"
            android:textColor="@color/textPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sightImage"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/sight_city" />

                <TextView
                    android:id="@+id/sightText"
                    style="@style/TextViewBody1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="Sight"
                    android:textColor="@color/textPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/continentIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/ic_continent" />

                <TextView
                    android:id="@+id/continentText"
                    style="@style/TextViewBody1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="Sight"
                    android:textColor="@color/textPrimary" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>