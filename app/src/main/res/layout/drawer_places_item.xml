<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--android:background="@drawable/selectable_item_background">-->


    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/rippleThumb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="@color/md_white_1000"
        app:mrl_rippleDuration="450"
        app:mrl_rippleFadeDuration="475"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">

        <ImageView
            android:id="@+id/imageThumb"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:background="@color/appBackgroundColor"
            android:scaleType="centerCrop" />

    </com.balysv.materialripple.MaterialRippleLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shadow_gradient" />

    <LinearLayout
        android:id="@+id/colorizedFrame"
        style="@style/LinearLayoutForTexts"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/locationThumb"
            style="@style/TextViewHeadline"
            android:text="Location"
            android:textColor="@color/textPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/locationThumb"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/SightIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/sight_city"/>

        <TextView
            android:id="@+id/sightThumb"
            style="@style/TextViewBody1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="Sight"
            android:textColor="@color/textPrimary" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>