<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selectable_item_background">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/rippleThumb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="@color/md_white_1000"
        app:mrl_rippleDuration="450"
        app:mrl_rippleFadeDuration="475"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true" >

        <ImageView
            android:id="@+id/imageThumb"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop" />

    </com.balysv.materialripple.MaterialRippleLayout>

    <LinearLayout
        android:id="@+id/colorizedFrame"
        style="@style/LinearLayoutForTexts"
        android:layout_gravity="bottom"
        android:background="@color/cardDarkOverlay">

        <TextView
            android:id="@+id/locationThumb"
            style="@style/TextViewTitle"
            android:text="Location"
            android:textColor="@color/textPrimary" />

        <TextView
            android:id="@+id/sightThumb"
            style="@style/TextViewBody1"
            android:layout_below="@id/locationThumb"
            android:text="Sight"
            android:textColor="@color/textPrimary" />

    </LinearLayout>

</FrameLayout>